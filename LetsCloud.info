name = Bootstrap Sub-Theme (CDN)
description = Uses the jsDelivr CDN for all CSS and JavaScript. No source files or compiling is necessary and is recommended for simple sites or beginners.
core = 7.x
base theme = bootstrap


;;;;;;;;;;;;;;;;;;;;;
;; Regions
;;;;;;;;;;;;;;;;;;;;;

regions[navigation]     = 'Navigation'
regions[header]         = 'Top Bar'
regions[slider_lets]    = 'Slider'
regions[highlighted]    = 'Highlighted'
regions[help]           = 'Help'
regions[content]        = 'Content'
regions[newsletter]     = 'Newsletter'
regions[sidebar_first]  = 'Primary'
regions[sidebar_second] = 'Secondary'
regions[footer]         = 'Footer'
regions[page_top]       = 'Page top'
regions[page_bottom]    = 'Page bottom'


;;;;;;;;;;;;;;;;;;;;;
;; Stylesheets
;;;;;;;;;;;;;;;;;;;;;

stylesheets[all][] = css/font-awesome/css/font-awesome.css
stylesheets[all][] = css/font-awesome/css/font-awesome.min.css
stylesheets[all][] = css/owl.carousel.css
stylesheets[all][] = css/owl.carousel.min.css
stylesheets[all][] = css/owl.theme.css
stylesheets[all][] = css/style.css


; JavaScript
; --------------

scripts[] = js/owl.carousel.js
scripts[] = js/script.js